# Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

PORT=5000

# xAI API Configuration (get your key from xai.com/api)
XAI_API_KEY=your-xai-api-key-here

# Coinbase API (get from coinbase.com/developer)
COINBASE_API_KEY=your-coinbase-api-key-here
COINBASE_CLIENT_ID=your-coinbase-client-id
COINBASE_CLIENT_SECRET=your-coinbase-client-secret

# MongoDB (optional)
MONGODB_URI=mongodb://localhost:27017/simple-dashboard
